doctype html
html
	head
		meta(charset="UTF-8")
		link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", rel="stylesheet")
		link(rel='stylesheet', href='/stylesheets/login.css')
	body
		div(class="container")
			div(class="row")
				div(class="col-sm-6 col-md-4 col-md-offset-4")
					h1(class="text-center login-title") FriendsMusics Login
					div(class="account-wall")
						img(class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120")
						form(class="form-signin" action="/loginProcess", method="post")
							input(type="text" name="pseudo" class="form-control" placeholder="Pseudo / email" style="margin-top:10px;")
							input(type="password" name="password" class="form-control" placeholder="Password" style="margin-top:10px;")
							button(class="btn btn-lg btn-primary btn-block" type="submit") Login
					a(href="#" class="text-center new-account") Create an account