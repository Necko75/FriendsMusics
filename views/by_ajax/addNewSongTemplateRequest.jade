div(class="add_song_submit_form" ng-controller="addNewSong")
	div(class="alert alert-info" style="margin-bottom:10px!important; margin-top:10px;")
		The song will be added to the playlist selected {{playlist_selected.name}}

	form(role="form" novalidate)
		div(class="form-group")
			label(for="artist_band") Artist / Band
			input(class="form-control" id="artist_band" placeholder="Enter artist" ng-model="song.band" required)
		div(class="form-group")
			label(for="name") Song name
			input(class="form-control" id="name" placeholder="Enter name" ng-model="song.name" required)
		div(class="form-group")
			label(for="url") Url
			input(class="form-control" id="url" placeholder="Enter url" ng-model="song.url" required)
		button(type="submit" class="btn btn-default" ng-click = "submit_add_song(song)" ng-disabled="form.$invalid") Submit
		&nbsp;
		button(type="submit" class="btn btn-default" ng-click = "close(song)" ng-disabled="form.$invalid") Cancel